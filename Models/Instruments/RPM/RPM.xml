<?xml version="1.0"?>

<PropertyList>

    <path>RPM.ac</path>
    
    <animation>
        <type>material</type>
        <object-name>RPMFace</object-name>
        <object-name>RPMBevel</object-name>
        <object-name>RPMPointerTip</object-name>   
        <emission>
            <red>1.0</red>
            <green>0.2</green>
            <blue>0.0</blue>
            <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>rotate</type>
        <object-name>RPMPointerCentre</object-name>
        <object-name>RPMPointerTip</object-name>
        <property>engines/engine[0]/rpm</property>
        <interpolation>
            <entry><ind>0</ind><dep>0</dep></entry>
            <entry><ind>3500</ind><dep>279</dep></entry>
        </interpolation>
        <axis> 
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>  
        </center>
    </animation>         
 
</PropertyList>
